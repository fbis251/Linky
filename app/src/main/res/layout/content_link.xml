<?xml version="1.0" encoding ="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="handler"
                type="com.fernandobarillas.linkshare.adapters.LinksAdapter.LinkHandler"/>

        <variable
                name="link"
                type="com.fernandobarillas.linkshare.models.Link"/>

    </data>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/link_layout_height"
            android:onLongClick="@{handler::onLongClick}">

        <TextView
                android:id="@+id/link_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/link_title"
                android:fontFamily="sans-serif-condensed"
                android:gravity="end"
                android:maxLines="1"
                android:minWidth="@dimen/link_time_min_width"
                android:text="@{link.timeString}"
                android:textAppearance="@style/LinkSecondaryText"
                tools:text="1 hr"/>

        <ImageView
                android:id="@+id/link_is_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/link_time"
                android:layout_below="@+id/link_time"
                android:onClick="@{link.favorite ? handler::onClickNotFavorite : handler::onClickFavorite}"
                android:paddingStart="@dimen/link_favorite_padding"
                android:paddingTop="@dimen/link_favorite_padding"
                android:src="@{link.favorite ? @drawable/ic_favorite_filled_24dp : @drawable/ic_favorite_border_24dp}"
                tools:src="@drawable/ic_favorite_filled_24dp"/>

        <TextView
                android:id="@+id/link_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_marginTop="16dp"
                android:layout_toStartOf="@+id/link_time"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:onClick="@{handler::onClickTitle}"
                android:text="@{link.title}"
                android:textAppearance="@style/LinkTitleText"
                tools:text="This is the maximum length that a title can be, which is one hundred characters. This is that long!!"/>

        <TextView
                android:id="@+id/link_domain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/link_title"
                android:onClick="@{handler::onClickDomain}"
                android:text="@{link.domain}"
                tools:text="example.com"/>

        <TextView
                android:id="@+id/link_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/link_title"
                android:layout_marginStart="@dimen/link_information_margin"
                android:layout_toEndOf="@id/link_domain"
                android:background="@{link.category != null ? @drawable/link_category_bg : null}"
                android:text="@{link.category}"
                tools:background="@drawable/link_category_bg"
                tools:text="@string/category_uncategorized"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray300"/>

    </RelativeLayout>
</layout>
